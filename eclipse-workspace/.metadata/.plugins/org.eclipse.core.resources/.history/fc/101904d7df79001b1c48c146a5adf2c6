package testeapto;

import java.util.Scanner;

public class Programa {

	public static void main(String[] args) {
		System.out.println("Bem vindo ao gerenciador de apartamentos!");
		System.out.println("Opções:");
		System.out.println("\t1: Criar apartamento");
		System.out.println("\t2: Sair");
		System.out.print("Opção: ");
			
		Scanner meuScanner = new Scanner(System.in);
		int opcaoDoUsuario = meuScanner.nextInt();
		
		if (opcaoDoUsuario == 1) {
			System.out.println("Criando um apartamento");
			Apartamento apto1 = new Apartamento(1);
			System.out.println("Apartamento criado: " + apto1.getInformacoes());
		} else if (opcaoDoUsuario == 2) {
			System.out.println("Até logo!");
			System.exit(0);
			
		} else {
			System.out.println("Opção inválida, o programa irá terminar.");
			System.exit(1);
		}
		
		
		
	}
}
